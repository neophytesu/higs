
.login-container {
		display: flex;
		flex-direction: column;
		align-items: center;
		padding: 50px;
}
.title {
		font-size: 20px;
		margin-bottom: 20px;
}
.input-container {
		margin-bottom: 20px;
}
.input {
		padding: 10px;
		border: 1px solid #ccc;
		border-radius: 5px;
		width: 300px;
}
.submit-btn {
		padding: 10px 20px;
		background-color: #007aff;
		color: #fff;
		border: none;
		border-radius: 5px;
		font-size: 16px;
}

	
