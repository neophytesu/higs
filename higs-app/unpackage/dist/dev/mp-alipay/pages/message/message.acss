.page {
  padding: 0 32rpx;
  color: #333;
}
.list-item {
  display: flex;
  padding: 30rpx 0;
  border-bottom: 1px solid #ccced3;
}
.list-item .avatar {
  width: 90rpx;
  height: 90rpx;
  border-radius: 10rpx;
  margin-right: 20rpx;
  position: relative;
}
.list-item .avatar .round {
  position: absolute;
  width: 14rpx;
  height: 14rpx;
  border-radius: 50%;
  background: #ef5656;
  top: -4rpx;
  right: -4rpx;
  z-index: 1;
}
.list-item .avatar image {
  width: 100%;
  height: 100%;
  border-radius: 10rpx;
}
.list-item .content {
  flex: 1;
}
.list-item .content .title {
  display: flex;
  justify-content: space-between;
}
.list-item .content .title .name {
  font-weight: bold;
}
.list-item .content .title .time {
  color: #999;
  font-size: 24rpx;
}
.list-item .content .txt {
  margin-top: 10rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 1;
  -webkit-box-orient: vertical;
  text-align: left;
  color: #999;
  font-size: 26rpx;
}